#!/bin/bash

if [ -z "$1" ]; then
	BRANCH="master"
	if ! git log --oneline $BRANCH &>/dev/null; then
		BRANCH="main"
	fi
else
	BRANCH=$1
fi
export BRANCH

files="$(echo -e "$(git log --oneline $BRANCH..@{upstream} | cut -d' ' -f1)")"
files=($files)
for ((i=${#files[@]}-1; i>=0; i--)); do
 	git --no-pager log "${files[$i]}"^.."${files[$i]}" --stat
	read press
	git --no-pager diff "${files[$i]}"^.."${files[$i]}"
	read press
done
